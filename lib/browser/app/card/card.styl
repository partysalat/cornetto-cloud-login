@import "jeet"
.card
  background: #000
  text-align center
  transition: 0.6s;
  transform-style: preserve-3d;
  width: 100%;
  height: 100px;
  position: relative;
  border 1px solid white
  border-radius: 5px
  &-container
    perspective: 1000px;


  &-flipper
    transform: rotateY(180deg);
  &-front, &-back
    width 100%
    height 100%
    backface-visibility: hidden;
    position: absolute;
    top: 0;
    left: 0;
  &-front
    z-index: 2;
    line-height 100px;
    /* for firefox 31 */
    transform: rotateY(0deg);
  &-back
    transform: rotateY(-180deg);
  &-button
    display:block;
    width:100%;
    height 100%;
    background: transparent
    color: #fff
    text-align: center;